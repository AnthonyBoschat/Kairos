model List {
  id                String   @id @default(cuid())
  title             String   
  favorite          Boolean  @default(false)
  countElement      Boolean  @default(true)
  defaultColor      Int?
  customColor       String?  
  order             Int      

  folderId          String
  folder            Folder   @relation(fields: [folderId], references: [id])

  tasks             Task[]

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("lists")
}