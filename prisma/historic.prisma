enum HistoricItemType {
  FOLDER
  LIST
  TASK
}

model Historic {
    id                  String            @id @default(cuid())

    user                User              @relation(fields: [userId], references: [id], onDelete:Cascade)
    userId              String

    item                Json
    itemType            HistoricItemType
    delete              Boolean           @default(false)

    createdAt           DateTime          @default(now())

    @@map("historics")
}