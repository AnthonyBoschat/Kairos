model Folder {
  id                String    @id @default(cuid())
  title             String   
  color             Int
  order             Int      
  favorite          Boolean   @default(false)
  listStandaloneID  String?

  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete:Cascade)

  lists             List[]

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deletedAt         DateTime?

  @@index([userId])
  @@index([userId, deletedAt, order])
  @@index([userId, deletedAt, favorite])
  
  @@map("folders")
}