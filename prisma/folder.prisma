model Folder {
  id                String   @id @default(cuid())
  title             String   
  color             String
  order             Int      
  favorite          Boolean  @default(false)
  showProgression   Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  userId            String
  user              User @relation(fields: [userId], references: [id])

  @@map("folders")
}